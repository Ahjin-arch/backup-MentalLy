<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B" /> <!-- Amarillo para estado seleccionado -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#FBC02D" /> <!-- Borde mÃ¡s oscuro -->
        </shape>
    </item>

    <!-- Estado no seleccionado -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Blanco para estado no seleccionado -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
            <stroke android:width="1dp" android:color="#BDBDBD" /> <!-- Borde gris suave -->
        </shape>
    </item>
</selector>
