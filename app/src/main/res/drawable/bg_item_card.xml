<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo con color sólido -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Fondo blanco -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>

    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/windowBackground"/> <!-- Color gris translúcido para la sombra -->
            <corners android:radius="16dp"/> <!-- Bordes redondeados igual al fondo -->
        </shape>
    </item>

</layer-list>
