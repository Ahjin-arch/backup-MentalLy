<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Amarillo para estado seleccionado -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado no seleccionado -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?android:attr/windowBackground" /> <!-- Blanco para estado no seleccionado -->
            <corners android:radius="10dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>


