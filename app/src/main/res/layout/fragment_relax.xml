<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_pane"
        android:padding="16dp"
        tools:context=".ui.relax.RelaxFragment"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_relax_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rel치jate"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/tv_relax_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explora distintas actividades para calmarte y relajarte"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:textColor="@color/red" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/btn_break"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_item_card"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_relax"
                        android:contentDescription="Respira" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respira"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mindfulnes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_item_card"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_relax"
                        android:contentDescription="Meditaci칩n" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meditaci칩n"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sounds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_item_card"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_relax"
                        android:contentDescription="Sonidos relajantes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sonidos"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_exercise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_item_card"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_relax"
                        android:contentDescription="Relajaci칩n muscular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muscular"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
