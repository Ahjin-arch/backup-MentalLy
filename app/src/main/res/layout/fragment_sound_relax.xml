<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tour_pane"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Fondo dinÃ¡mico" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sonidos relajantes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un sonido para relajarte"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:textColor="@color/purple_500" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/btn_rain_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_item_card"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_rain"
                    android:contentDescription="Sonido de lluvia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lluvia"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_forest_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_item_card"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_forest"
                    android:contentDescription="Sonido de bosque" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bosque"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_waves_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_item_card"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_waves"
                    android:contentDescription="Sonido de olas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olas"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_fireplace_sound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_item_card"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_fireplace"
                    android:contentDescription="Sonido de chimenea" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chimenea"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
