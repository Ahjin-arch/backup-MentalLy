<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/container_meditation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="@drawable/bg_meditation_anim"
        >
        <ImageView
            android:id="@+id/iv_focal_point"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_mandala_animated"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/txMandala"/>
        <TextView
            android:id="@+id/tv_meditation_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txPhrases"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:padding="16dp"
            android:background="@drawable/bg_quote_card"
            />
        <TextView
            android:id="@+id/tv_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txDuration"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/rg_duration_meditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@id/rb_3_min"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_duration_label"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rb_1_min"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txOneMin"
                app:strokeColor="#80FFFFFF"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_time_1"
                app:iconGravity="textTop"
                app:iconTint="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rb_3_min"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txThreeMin"
                app:strokeColor="#80FFFFFF"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp"
                app:icon="@drawable/ic_time_3"
                app:iconGravity="textTop"
                app:iconTint="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rb_5_min"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txFiveMin"
                app:strokeColor="#80FFFFFF"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp"
                app:icon="@drawable/ic_time_3"
                app:iconGravity="textTop"
                app:iconTint="#FFFFFF"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_meditation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/txStartMeditation"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_lotus"
            app:cornerRadius="16dp"
            app:strokeColor="#30FFFFFF"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            />

    </LinearLayout>

</ScrollView>