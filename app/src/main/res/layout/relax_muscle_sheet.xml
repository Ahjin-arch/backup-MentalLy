<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Título con animación de entrada -->
    <TextView
        android:id="@+id/tvRelaxInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/muscle_relaxation_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:alpha="1"/>


    <!-- Indicador de grupo muscular actual -->
    <TextView
        android:id="@+id/tvMuscleStep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_muscle_step_card"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:padding="20dp"
        android:text="@string/default_muscle_step"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRelaxInstruction"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Indicador visual del paso actual -->
    <ImageView
        android:id="@+id/ivMuscleIllustration"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMuscleStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_shoulders"
        android:contentDescription="@string/muscle_illustration_desc"/>

    <!-- Barra de progreso mejorada -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pbMuscleProgress"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:indeterminate="false"
        android:max="100"
        app:trackColor="#30FFFFFF"
        app:trackCornerRadius="6dp"
        app:indicatorColor="#FF80AB"
        app:layout_constraintTop_toBottomOf="@+id/ivMuscleIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="32dp"/>

    <!-- Contador de tiempo -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeZero"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/pbMuscleProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón principal con animación -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartMuscle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/txStart"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_play_filled"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        app:iconTint="#FFFFFF"
        app:cornerRadius="28dp"
        app:backgroundTint="#7C4DFF"
        app:strokeColor="#30FFFFFF"
        app:strokeWidth="1dp"
        app:rippleColor="#B388FF"
        app:layout_constraintTop_toBottomOf="@+id/tvTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginTop="32dp"/>

    <!-- Indicador de pasos -->
    <LinearLayout
        android:id="@+id/stepIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStartMuscle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>