<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreenBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_peekHeight">0dp</item> <!-- La altura mínima será de 0 -->
        <item name="android:windowIsFloating">false</item> <!-- Elimina el aspecto flotante -->
        <item name="android:layout_height">match_parent</item> <!-- Ocupa toda la pantalla -->
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">320dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>